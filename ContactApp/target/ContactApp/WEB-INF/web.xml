<web-app>
<servlet>
	<servlet-name>show</servlet-name>
	<servlet-class>com.lxisoft.servlet.ShowAllContactServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>show</servlet-name>
	<url-pattern>/home</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>add contact</servlet-name>
	<servlet-class>com.lxisoft.servlet.AddContactServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>add contact</servlet-name>
	<url-pattern>/add</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>get contact</servlet-name>
	<servlet-class>com.lxisoft.servlet.GetContactByIdServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>get contact</servlet-name>
	<url-pattern>/getContact</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>edit contact</servlet-name>
	<servlet-class>com.lxisoft.servlet.EditContactServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>edit contact</servlet-name>
	<url-pattern>/editContact</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>delete contact</servlet-name>
	<servlet-class>com.lxisoft.servlet.DeleteContactServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>delete contact</servlet-name>
	<url-pattern>/delete</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>search contact</servlet-name>
	<servlet-class>com.lxisoft.servlet.SearchContactServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>search contact</servlet-name>
	<url-pattern>/search</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>sort contact</servlet-name>
	<servlet-class>com.lxisoft.servlet.SortContactServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>sort contact</servlet-name>
	<url-pattern>/sort</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>logout</servlet-name>
	<servlet-class>com.lxisoft.servlet.LogoutServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>logout</servlet-name>
	<url-pattern>/Logout</url-pattern>
</servlet-mapping>

<security-constraint>
    <web-resource-collection>
        <web-resource-name>contact</web-resource-name>
        <url-pattern>/home</url-pattern>
        <http-method>GET</http-method>
        <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
        <role-name>admin</role-name>
        <role-name>user</role-name>
     </auth-constraint>
</security-constraint>
   
   <security-role>
      <role-name>admin</role-name>
      <role-name>user</role-name>
   </security-role>

   <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
        <form-login-page>/LoginForm.jsp</form-login-page>
        <form-error-page>/Error.jsp</form-error-page>
        </form-login-config>  
   </login-config>
</web-app>